<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
 <bean id="a1" class="com.wipro.training.springdemo.Address"><!-- creating bean  -->
   
    <!-- constructor-argument tag is used for constructor Injection  -->
    <constructor-arg value="Bangalore"></constructor-arg>
    <constructor-arg value="Karnataka"></constructor-arg>
    <constructor-arg value="India"></constructor-arg>
    <constructor-arg value="560016" type="Long"></constructor-arg>
    </bean>

<bean id="cd" class="com.wipro.training.springdemo.Candidate"><!-- creating bean  -->
   
    <!-- constructor-argument tag is used for constructor Injection  -->
    <constructor-arg value="101" type="int"></constructor-arg>
    <constructor-arg value="Mike"></constructor-arg>
 
    <constructor-arg>
        <ref bean="a1"></ref>  <!-- Aggregation.. referring Address bean -->
    </constructor-arg>
    </bean>
</beans>
